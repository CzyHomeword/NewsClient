<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="color/activity_bg"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_pager"
        android:layout_weight="1"/>

    <!--界面底部的选项卡-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rg_01"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <RadioButton
            android:id="@+id/rb_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector_home_tab_01"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="新闻"
            android:textColor="@drawable/selector_home_tab"
            android:textSize="12sp"/>
        <RadioButton
            android:id="@+id/rb_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_tab_03"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="视听"
            android:textColor="@drawable/selector_home_tab"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/rb_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_tab_02"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="阅读"
            android:textColor="@drawable/selector_home_tab"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/rb_04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_tab_04"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="发现"
            android:textColor="@drawable/selector_home_tab"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/rb_05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableTop="@drawable/selector_home_tab_05"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="设置"
            android:textColor="@drawable/selector_home_tab"
            android:textSize="12sp"/>

    </RadioGroup>

</LinearLayout>